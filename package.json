{
  "name": "vscode-advanced-snippets",
  "displayName": "Advanced snippets",
  "description": "An improved snippets management experience for VSCode",
  "version": "0.1.0",
  "icon": "icon.png",
  "author": {
    "name": "Bruno Paz",
    "email": "oss@brunopaz.dev",
    "url": "https://brunopaz.dev"
  },
  "repository": {
    "url": "https://github.com/brpaz/vscode-advanced-snippets",
    "type": "git"
  },
  "publisher": "brpaz",
  "engines": {
    "vscode": "^1.52.0",
    "node": ">=16"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "Snippets",
    "Snippet"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:snippetsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "snippets-explorer": [
        {
          "id": "snippetsTreeView",
          "name": "Advanced Snippets",
          "contextualTitle": "Advanced Snippets"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippets-explorer",
          "title": "Advanced Snippets",
          "icon": "resources/icons/activitybar.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "advanced-snippets.refreshTreeView",
          "when": "view == snippetsTreeView",
          "group": "navigation"
        },
        {
          "command": "advanced-snippets.createFolder",
          "when": "view == snippetsTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "advanced-snippets.deleteFolder",
          "when": "view == snippetsTreeView && viewItem == snippetFolder"
        },
        {
          "command": "advanced-snippets.createSnippet",
          "when": "view == snippetsTreeView && viewItem == snippetFolder"
        },
        {
          "command": "advanced-snippets.insertSnippet",
          "when": "view == snippetsTreeView && viewItem == snippetFile"
        },
        {
          "command": "advanced-snippets.editSnippet",
          "when": "view == snippetsTreeView && viewItem == snippetFile"
        },
        {
          "command": "advanced-snippets.moveSnippet",
          "when": "view == snippetsTreeView && viewItem == snippetFile"
        },
        {
          "command": "advanced-snippets.deleteSnippet",
          "when": "view == snippetsTreeView && viewItem == snippetFile"
        }
      ],
      "editor/context": [
        {
          "command": "advanced-snippets.createSnippetFromSelection",
          "when": "editorHasSelection",
          "group": "2_workspace"
        }
      ]
    },
    "commands": [
      {
        "command": "advanced-snippets.refreshTreeView",
        "title": "Refresh Snippets",
        "category": "Advanced Snippets",
        "icon": "$(refresh)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.createFolder",
        "title": "Create Folder",
        "category": "Advanced Snippets",
        "icon": "$(new-folder)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.deleteFolder",
        "title": "Delete Folder",
        "category": "Advanced Snippets",
        "icon": "$(trash)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.createSnippet",
        "title": "Create Snippet",
        "category": "Advanced Snippets",
        "icon": "$(new-file)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.createSnippetFromSelection",
        "title": "Create Snippet From Selection",
        "category": "Advanced Snippets"
      },
      {
        "command": "advanced-snippets.editSnippet",
        "title": "Edit Snippet",
        "category": "Advanced Snippets",
        "icon": "$(edit)"
      },
      {
        "command": "advanced-snippets.moveSnippet",
        "title": "Move Snippet",
        "category": "Advanced Snippets",
        "icon": "$(move)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.deleteSnippet",
        "title": "Delete Snippet",
        "category": "Advanced Snippets",
        "icon": "$(delete)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.insertSnippet",
        "title": "Insert Snippet",
        "category": "Advanced Snippets",
        "icon": "$(add)",
        "hidden": true
      },
      {
        "command": "advanced-snippets.searchSnippets",
        "title": "Search Snippets",
        "category": "Advanced Snippets"
      }
    ],
    "configuration": [
      {
        "title": "Advanced Snippets",
        "properties": {
          "advanced-snippets.triggerKey": {
            "type": "string",
            "default": ">",
            "description": "The key to trigger the snippet insertion."
          },
          "advanced-snippets.debug": {
            "type": "boolean",
            "default": false,
            "description,": "Enable debug mode."
          }
        }
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.snippet.yaml",
        "url": "./schemas/snippet.schema.json"
      }
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier check \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:report:jest": "serve ./reports/jest",
    "test:report:coverage": "serve ./reports/coverage/lcov-report",
    "package": "rimraf dist && mkdir -p dist && vsce package -o dist/",
    "release": "vsce publish -i dist/*.vsix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^16.18.11",
    "@types/node-fetch": "^2.6.2",
    "@types/node-fetch-cache": "^3.0.0",
    "@types/picomatch": "^2.3.0",
    "@types/tmp": "^0.2.3",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.52.0",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "add": "^2.0.6",
    "cd": "^0.3.3",
    "chalk": "^4.1.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.0",
    "memfs": "^3.4.13",
    "nock": "^13.3.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "serve": "^14.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "vscode-advanced-snippets": "/home/bruno/Code/Personal/vscode-extensions/vscode-advanced-snippets",
    "vscode-test": "^1.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "dependencies": {
    "glob-promise": "^6.0.2",
    "node-fetch": "2",
    "node-fetch-cache": "^3.0.5",
    "picomatch": "^2.3.1",
    "uuid": "^9.0.0",
    "yaml": "^2.2.1"
  }
}