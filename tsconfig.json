{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "out",
    "lib": ["ES2021"],
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "src/scripts"]
}
